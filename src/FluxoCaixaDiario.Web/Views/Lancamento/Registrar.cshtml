@model FluxoCaixaDiario.Web.Models.LancamentoInputModel
@{
    ViewData["Title"] = "Registrar Lançamento";
    var dataRegistro = ViewBag.DataRegistro as DateTime? ?? DateTime.Today;
}
<h2>@ViewData["Title"]</h2>
@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}
<form asp-action="Registrar" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Tipo" class="form-label"></label>
        <select asp-for="Tipo" class="form-select">
            <option value="0">Crédito</option>
            <option value="1">Débito</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Valor" class="form-label"></label>
        <input asp-for="Valor" type="number"  class="form-control" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descricao" class="form-label"></label>
        <input asp-for="Descricao" type="text" class="form-control" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Data" class="form-label"></label>
        <input asp-for="Data" type="date" class="form-control" value="@dataRegistro.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Registrar</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}